<style>
    .card-header{
        color: #2A8735;
    }

</style>

<div class="col">
    <div class="card h-100">
        <div class="card-header card-title d-flex justify-content-between text-success" >
            {{ cardTitle }}
            <button type="button" class="btn link-danger deleteButton" data-bs-toggle="modal" data-bs-target="#delete-modal">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        <div class="card-body">
            {#<img src="{{ asset('assets/images/') ~ path | defaultImage}}" alt=""#}
            <img src="{{ asset('assets/img/') ~ imageName }}" class="card-img-top mb-3" alt="stadium" >
            <button type="button" class="btn btn-outline-success align-self-center">Edit</button>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="delete-modal" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" style="color: black">Delete Stadium?</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this stadium?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>

